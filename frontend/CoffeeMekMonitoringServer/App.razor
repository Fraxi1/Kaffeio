<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Shared.MainLayout)">
                <NotAuthorized>
                    <div class="container-fluid vh-100">
                        <div class="row h-100 justify-content-center align-items-center">
                            <div class="col-md-6 text-center">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="mb-3">
                                            <i class="fas fa-lock text-warning me-2"></i>
                                            Accesso Richiesto
                                        </h4>
                                        <p class="text-muted mb-3">
                                            Devi effettuare l'accesso per visualizzare questa pagina.
                                        </p>
                                        <a href="/login" class="btn btn-primary">
                                            <i class="fas fa-sign-in-alt me-2"></i>
                                            Vai al Login
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <PageTitle>Pagina non trovata</PageTitle>
            <LayoutView Layout="@typeof(Shared.MainLayout)">
                <div class="container-fluid vh-100">
                    <div class="row h-100 justify-content-center align-items-center">
                        <div class="col-md-6 text-center">
                            <h4>
                                <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                                Pagina non trovata
                            </h4>
                            <p class="text-muted">La pagina che stai cercando non esiste.</p>
                            <a href="/" class="btn btn-primary">Torna alla Home</a>
                        </div>
                    </div>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
